{
  "name": "smarted",
  "displayName": "SmartEd",
  "version": "0.0.2",
  "description": "AI powered summary and quiz generation tool for YouTube video lectures",
  "author": "Tawseef Shamim",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@mdxeditor/editor": "^3.46.1",
    "plasmo": "^0.90.5",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@types/chrome": "0.1.18",
    "@types/node": "24.6.2",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "prettier": "3.6.2",
    "typescript": "5.9.3"
  },
  "pnpm": {
    "overrides": {
      "content-security-policy-parser": ">=0.6.0",
      "msgpackr": ">=1.10.1",
      "svelte": ">=4.2.19",
      "esbuild": ">=0.25.0"
    }
  },
  "manifest": {
    "manifest_version": 3,
    "name": "SmartEd",
    "version": "0.0.2",
    "description": "AI powered summary and quiz generation tool for YouTube video lectures",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ]
  }
}